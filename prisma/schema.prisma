generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  name     String
  otps     OTP[]
  logs     ActivityLog[]
}

model OTP {
  id        Int      @id @default(autoincrement())
  code      String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}


model ActivityLog {
  id        Int      @id @default(autoincrement())
  action    String
  details   String
  timestamp DateTime @default(now())
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id])
  ip        String?
  status    String?  @default("SUCCESS")

  @@index([timestamp])
  @@map("activity_logs")
}
